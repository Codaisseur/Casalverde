<div>
  <%= form_for [@booking = Booking.new] do |f| %>
 <p><strong>Nightly Price:</strong> <span>â‚¬</span> <%= @booking.price = 200%></p>

      <hr>
      <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, placeholder: "First name" %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name, placeholder: "Last name" %>

      <%= f.label :email %>
      <%= f.text_field :email, placeholder: "your email" %>
      </div>
      <hr>

      <div class="form-group">
        <label>Check In:</label>
        <%= f.date_select :starts_at %>
      </div>

      <div class="form-group">
        <label>Check Out:</label>
        <%= f.date_select :ends_at %>
      </div>

      <%= f.hidden_field :price, value: 200 %>

      <hr>

      <div class="actions">
        <%= f.submit "Book Now", class: "btn btn-success" %>
      </div>
  <% end %>
</div>

