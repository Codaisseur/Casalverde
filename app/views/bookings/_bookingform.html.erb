<div>
  <%= form_for [@booking = Booking.new] do |f| %>
      <p><strong>Nightly Price:€200</strong> <span>€</span> <%= @booking.price %></p>

      <hr>

      <%= f.label :first_name %>
      <%= f.text_field :first_name %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <hr>

      <div class="form-group">
        <label>Check In:</label>
        <%= f.date_select :starts_at %>
      </div>

      <div class="form-group">
        <label>Check Out:</label>
        <%= f.date_select :ends_at %>
      </div>


      <%= f.hidden_field :price, value: @booking.price %>

      <hr>

      <div class="actions">
        <%= f.submit "Book Now", class: "btn btn-success" %>
      </div>
  <% end %>
</div>